{% extends "KarpatskaFormBundle::layout.html.twig" %}
{% block title %}Prihlásenie spoločnosti{% endblock %}

{% block body %}
    <div class="container">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <form action="{{path('_company_security_check')}}" method="post">
                <h2>Prihlásenie <small>spoločnosti</small></h2>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="form-group">
                            <input type="text" name="_username" class="form-control input-lg" placeholder="IČO...">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="form-group">
                            <input type="password" name="_password" class="form-control input-lg" placeholder="Heslo...">
                        </div>
                    </div>
                </div>
                <hr class="colorgraph">
                <div class="row">
                    <div class="col-xs-12 col-md-12">
                        <input type="submit" value="Prihlásiť" class="btn btn-primary btn-block btn-lg" tabindex="7">
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12 col-md-12 text-center">
                        <a href="{{ path('_company_register') }}">Spoločnosť nie je registrovaná</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}