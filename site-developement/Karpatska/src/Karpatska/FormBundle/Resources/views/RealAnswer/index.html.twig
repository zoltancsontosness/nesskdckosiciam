{% extends "KarpatskaFormBundle::layout.html.twig" %}

{% block body -%}
<div class="container">
    <h1>Firmy ktoré vyplnili formulár</h1>

    <table class="table table-striped table-bordered records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>IČO</th>
                <th>DIČ</th>
                <th>Akcie</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            {% if entity.realAnswers|length > 0 %}
            <tr>
                <td><a href="{{ path('admin_records_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.ico }}</td>
                <td>{{ entity.dic }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('admin_records_show', { 'id': entity.id }) }}"><i class="glyphicon glyphicon-search"></i> Zobraziť</a>
                </td>
            </tr>
            {% endif %}
        {% endfor %}
        </tbody>
    </table>
</div>

    {% endblock %}
