{% extends '::base.html.twig' %}

{% block body -%}
    <h1>RealAnswer</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Answertext</th>
                <td>{{ entity.answerText }}</td>
            </tr>
            <tr>
                <th>Json</th>
                <td>{{ entity.json }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_records') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_records_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
