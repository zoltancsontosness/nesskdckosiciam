{% extends "KarpatskaFormBundle::layout.html.twig" %}

{% block body -%}
<div class="container">
    <h1>Detail</h1>

    <table class="table table-striped table-bordered record_properties">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Meno organizácie</th>
                <td>{{ entity.orgName }}</td>
            </tr>
            <tr>
                <th>IČO</th>
                <td>{{ entity.ico }}</td>
            </tr>
            <tr>
                <th>Meno reprezentanta</th>
                <td>{{ entity.reprName }}</td>
            </tr>
            <tr>
                <th>Telefón na reprezentanta</th>
                <td>{{ entity.reprPhone }}</td>
            </tr>
            <tr>
                <th>Email na reprezentanta</th>
                <td>{{ entity.reprEmail }}</td>
            </tr>
            <tr>
                <th>IBAN</th>
                <td>{{ entity.accountNum }}</td>
            </tr>
            <tr>
                <th>Adresa banky</th>
                <td>{{ entity.bankAddress }}</td>
            </tr>
            <tr>
                <th>Názov banky</th>
                <td>{{ entity.bankName}}</td>
            </tr>
        </tbody>
    </table>

    <table class="table table-bordered record_properties">
        <thead>
            <tr>
                <th class="warning">Názov súboru</th>
            </tr>
        </thead>
        <tbody>
        {% for file in files %}
        <tr>
            <td class="success"><a href="{{ asset("files") }}/{{ ico }}/{{ file }}" target="_blank">{{ file }}</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>


        <a class="btn btn-warning" href="{{ path('admin_records') }}">
            <i class="glyphicon glyphicon-arrow-left"></i>
            Návrat na prehľad
        </a>
</div>
{% endblock %}
